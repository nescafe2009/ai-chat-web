{
  "id": "openclaw-channel-nexus",
  "channels": [
    "nexus"
  ],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "hub2dUrl": {
        "type": "string"
      },
      "roomId": {
        "type": "string"
      },
      "agentName": {
        "type": "string"
      },
      "longTextThreshold": {
        "type": "integer",
        "minimum": 500
      },
      "gatewayTimeoutMs": {
        "type": "integer",
        "minimum": 5000,
        "description": "Gateway HTTP dispatch timeout in ms (default 60000)"
      }
    }
  },
  "uiHints": {
    "hub2dUrl": {
      "label": "Hub2d URL",
      "placeholder": "http://127.0.0.1:9800"
    },
    "roomId": {
      "label": "Default Room ID",
      "placeholder": "general"
    },
    "agentName": {
      "label": "Agent Name",
      "placeholder": "serina"
    },
    "longTextThreshold": {
      "label": "Long Text Threshold (chars)",
      "placeholder": "4000"
    },
    "gatewayTimeoutMs": {
      "label": "Gateway Timeout (ms)",
      "placeholder": "60000"
    }
  },
  "version": "0.3.0"
}
